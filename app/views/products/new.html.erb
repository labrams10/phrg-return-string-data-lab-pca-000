<h1>Add New Product</h1>
<%= form_for @product do |f| %>
  <p><%= f.label :name %>
  <%= f.text_field :name %></p>
  <p><%= f.label :price %>
  <%= f.text_field :price %></p>
  <p><%= f.label :inventory %>
  <%= f.text_field :inventory %></p>
  <p><%= f.label :description %>
  <%= f.text_area :description %></p>
  <%= f.submit %>
<% end %>
